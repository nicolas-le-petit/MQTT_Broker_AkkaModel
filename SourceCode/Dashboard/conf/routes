# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# WebJars
->          /webjars                webjars.Routes
# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /welcome                    controllers.HomeController.welcome

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
GET     /assets/*file               controllers.Assets.at(path="/public", file)
#GET     /tsdata                     controllers.HomeController.dataSet
#POST    /tsdata                     controllers.HomeController.addData
#GET     /webjars/*file              controllers.WebJarAssets.at(file)


# Funtions
GET     /device/loadDevicePage       controllers.HomeController.loadCreateDevicePage
GET     /device/delete/:device_code  controllers.HomeController.deleteDevice(device_code)

POST    /device/create               controllers.HomeController.createDevice
GET     /device/listDevice           controllers.HomeController.listAllDevice
GET     /device/edit/:device_code    controllers.HomeController.loadEditDevicePage(device_code )

#POST    /subscribe/getTopic          controllers.HomeController.getTopicSubscribe
POST    /subscribe                   controllers.HomeController.MQTTsubscribe
POST    /publishPost                 controllers.HomeController.MQTTpublishPOST
GET     /form/:device_code           controllers.HomeController.loadForm(device_code)
GET     /form/update/:device_code    controllers.HomeController.updatePayload(device_code)

